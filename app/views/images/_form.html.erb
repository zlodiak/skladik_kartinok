<%= form_for(@image) do |f| %>
  <input name="image[album_id]" type="hidden" value="<%= @album_id %>">
  
  <div class="row">
    <div class="form-group col-xs-12 col-sm-6">
      <label for="exampleInputPassword1">Описание</label>
      <%= f.text_area(:description, rows: 4, class: 'form-control') %>
    </div>

    <div class="form-group col-xs-12 col-sm-6">
      <label for="exampleInputEmail1">Картинка</label>
      <%= f.file_field :image, class: "desc_album" %>
      <%= f.submit 'Загрузить картинку', class: 'btn btn-default pull-right', id: 'loadImage' %>      
    </div>
  </div>
<% end %>
