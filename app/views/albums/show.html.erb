<div class="jumbotron jumbotron_show_album" id="jumbotronShowAlbum" data-album-id='<%= @album_id %>'>
  <div class="description_area">
    <h1 class="h1"><%= @album.title %></h1>
    <%= @album.description %>
  </div>

  <% if @user == current_user  %>
  <div class="add_image_area" id="addImageArea">
    <div class="add_image_form" id="addImageForm">
      <%= render 'images/form' %>
    </div>
    <span class="add_image_toggler btn btn-primary pull-right" id='addImageToggler'>Форма добавления картинки</span>
  </div>
  <% end %>
</div>

<div class="row thumb_album_container" id="thumbsList">
  <% @images.each do |image| %>
    <article class="col-xs-12 col-sm-6 col-md-4" data-image-id="<%= image.id %>">
      <%= form_tag('/images/' + image.id.to_s, method: :get) do %>
        <%= hidden_field(:image, :image_id, :value => image.id) %>
        <%= image_tag(image.image.url(:thumb), class: "thumb") %>
        <p class="description"><%= truncate(image.description, length: 100, omission: '...') %></p>
      <% end %>
    </article>
  <% end %>
</div>

<%#= link_to 'Edit', edit_user_album_path(current_user, @album) %> 

